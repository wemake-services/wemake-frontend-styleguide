{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:js": "eslint --cache --ext .js --ignore-path .gitignore .",
    "lint:ts": "eslint --cache --quiet --config ./packages/eslint-config-typescript/recommended.js --ext .ts --ignore-pattern incorrect.ts packages/eslint-config-typescript/tests/fixtures",
    "lint": "yarn run lint:js && yarn run lint:ts",
    "test:unit": "lerna run test",
    "test": "yarn run test:unit && yarn run lint"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./packages/eslint-config-javascript/index.js",
      "./packages/eslint-config-jsdoc/index.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.7.4",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "core-js": "^3.20.1",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsdoc": "^37.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "jest": "^27.4.0",
    "jest-preset-stylelint": "^4.2.0",
    "lerna": "^3.16.4",
    "node-notifier": "^10.0.0",
    "postcss": "^8.4.5",
    "regenerator-runtime": "^0.13.9",
    "stylelint": "^14.2.0",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.4",
    "vue-eslint-parser": "^8.1.0"
  },
  "dependencies": {}
}
